<Window x:Class="CashBatch.Desktop.AssignCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Customer" Height="260" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Bank Number:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BankNumber}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Account Number:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AccountNumber}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Possible Customer ID:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding PossibleCustomerId}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Customer Name:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CustomerName}" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Mail City:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MailCity}" Margin="0,0,0,8"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,8,0,8">
            <TextBlock Text="Customer ID:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Text="{Binding CustomerId, UpdateSourceTrigger=PropertyChanged}" Width="160"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,8,0" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Cancel" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
